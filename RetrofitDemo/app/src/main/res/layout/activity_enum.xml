<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:text="将下面的类型分批显示，0表示男性，1表示女性，2表示人妖，其他的表示Unknown"
        android:textColor="@color/font_primary_light"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enum_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_enum_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="1"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_enum_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="2"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_enum_unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="\?"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enum_explain"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small"/>


        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/enum_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_primary_light"
            android:textSize="@dimen/font_small"/>

    </LinearLayout>


</LinearLayout>
